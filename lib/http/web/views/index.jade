doctype html
html(ng-app='gendok')
  head
    title gendok
    script(src='/js/all.js')
    link(rel='stylesheet', href='/css/all.css')
  body(ng-controller='layoutController')
    .navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') gendok
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='#/') Home
            li(ng-if='authService.isAuthenticated()')
              a(href='#/templates') Templates
            li(ng-if='authService.isAuthenticated()')
              a(href='#/jobs') Jobs
            li
              a(href='#/about') About us

          ul.nav.navbar-nav.navbar-right
            li(ng-if='!authService.isAuthenticated()')
              a.signup-link(href='/#/register') Want to sign up?
            li.dropdown(ng-if='authService.isAuthenticated()')
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Hello, {{authService.getUser().username}}!
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#/profile') My profile
                li.divider
                li
                  a.signout-link(href='#' ng-click='signoutUser()') Sign out
    .container(ui-view)
