div
  h2.alert.alert-danger(ng-if='error_message') {{error_message}}
  h2.alert.alert-success(ng-if='success_message') {{success_message}}
  h2 Template: {{template.name}}
  button(class="btn btn-default" ng-click="edit()" ng-if='!editable') edit
  ul.list-group(ng-if='!editable')
    li.list-group-item Type: {{template.type}}
    li.list-group-item Body: {{template.body}}
  form(ng-if='editable')
    p Name: 
      input.form-control(type="text" ng-model="template.name" )
    p Type:
      select.form-control(ng-model="template.type" )
        option mustache
        option html
    p Body:
      textarea.form-control(type="text" rows="10" ng-model="template.body")
    input(type="submit" class="btn btn-default" ng-click="update(template)" value="Save")
    input(type="submit" class="btn btn-default" ng-click="reset()" value="cancel")
