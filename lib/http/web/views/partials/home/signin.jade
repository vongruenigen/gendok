div(ng-controller='signinController')
  form.form-signin(novalidate)
    h2.form-signin-heading Please sign in

    .alert.alert-danger(ng-show='error') {{error}}

    label.sr-only(for='username') Username
    input.form-control(
      type='email'
      id='username'
      placeholder='username'
      ng-model='username'
      required
      autofocus
    )

    label.sr-only(for='password') Password
    input.form-control(
      type='password'
      id='password'
      placeholder='password'
      ng-model='password'
      required
    )

    button.btn.btn-signin.btn-lg.btn-primary.btn-block(
      type='submit' ng-click='signin(username, password)'
    ) Sign in
